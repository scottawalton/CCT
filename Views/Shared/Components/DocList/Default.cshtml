@model List<PdfFile>

@foreach(PdfFile doc in Model)
{
    <div class="container">
        <div class="border" style="background-color: #eee; padding: 5px 30px 5px 30px; height: 50px; line-height: 50px">
        <a asp-controller="Documents" asp-action="LoadPDF" asp-route-id="@doc.Id" target="_blank">
        <span style="color:darkblue">Click here to view @doc.Name</span>
        </a>
        <a asp-controller="Documents" asp-action="Download" asp-route-id="@doc.Id">
        <span style="display: inline; float: right; color: green; text-decoration:underline">Download</span>
        </a>
        </div>
    </div>
    <br>
}